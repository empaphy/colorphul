{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node18/tsconfig.json",

  "compilerOptions": {
    "module": "es2022",                                  /* Specify what module code is generated. */
    "types":  ["node"]
  },

  "exclude": [
    "**/*.js",
    "**/*.d.ts",
    "node_modules",
    "local",
    "public",
    "var"
  ],

  "include": [
    "bin"
  ]
}
